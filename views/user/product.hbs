<!-- Inline Styles for Sorting Dropdown and Search Box -->
<style>
    .product-short .dropdown {
        display: flex;
        width: auto;
    }

    .product-short .dropdown-toggle {
        padding: 5px 10px;
        font-size: 14px;
        border: 6px solid #6c4444;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    .product-short .dropdown-menu {
        min-width: 200px;
    }

    .product-short .dropdown-item {
        font-size: 14px;
    }

    .product-search {
        display: flex;
        margin-bottom: 20px;
    }

    .product-search input {
        flex: 1;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        margin-right: 10px;
    }

    .product-search button {
        padding: 10px 20px;
        border: none;
        background-color: #28a745;
        color: white;
        border-radius: 5px;
        cursor: pointer;
    }

    .product-search button:hover {
        background-color: #218838;
    }

    /* Style for the dropdown */
.category-dropdown {
    width: 42%;
    padding: 10px;
    border: 1px solid #3f4db6;
    border-radius: 4px;
    background-color: #fff;
    font-size: 14px;
    color: #333;
    margin-right: 10px;
    cursor: pointer;
    margin-bottom: 10px;
}

/* Style for the apply button */
.apply-button {
    padding: 5px 5px;
    border: none;
    border-radius: 4px;
    background-color: #234366;
    color: white;
    font-size: 14px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.apply-button:hover {
    background-color: #566f89;
}

   
</style>

<!-- Product List Start -->
<div class="product-view">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-md-8">
                                <!-- Product Search Box -->
                                <div class="product-search">
                                    <form method="GET" action="">
                                        <input type="text" id="search" name="search" placeholder="Search"
                                            value="{{query.search}}">
                                    </form>
                                </div>
                                <!-- Product Sorting Dropdown -->
                                <div class="product-short">
                                    <div class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Product by</a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a href="?sort=price_high"
                                                class="dropdown-item {{#if (eq sortOption 'price_high')}}active{{/if}}">Price:
                                                High to Low</a>
                                            <a href="?sort=price_low"
                                                class="dropdown-item {{#if (eq sortOption 'price_low')}}active{{/if}}">Price:
                                                Low to High</a>
                                            <a href="?sort=name_asc"
                                                class="dropdown-item {{#if (eq sortOption 'name_asc')}}active{{/if}}">Name:
                                                A to Z</a>
                                            <a href="?sort=name_desc"
                                                class="dropdown-item {{#if (eq sortOption 'name_desc')}}active{{/if}}">Name:
                                                Z to A</a>
                                        </div>
                                    </div>
                                </div>
                                

                                 <!-- Category Dropdown and Apply Button -->
                                <form action="/product" method="GET" id="categoryForm">
                                    <input type="hidden" name="search" value="{{query.search}}">
                                    <input type="hidden" name="sort" value="{{sortOption}}">
                                    <select name="category" class="category-dropdown">
                                        <option value="">All Categories</option>
                                        {{#each categories}}
                                        <option value="{{this._id}}" {{#if (eq ../query.category this._id)}}selected{{/if}}>{{this.name}}</option>
                                        {{/each}}
                                    </select>
                                    <button type="submit">Apply</button>
                                </form>
                            </div>
                            <!-- Range helper usage -->
                            <ul>
                                {{#range}}
                                {{/range}}
                            </ul>



                        </div>
                    </div>

                    {{#each products}}
                    <div class="col-lg-4 col-md-4 col-12 col-sm-6">
                        <div class="product-item">
                            <div class="product-image">
                                <a href="/viewone/{{this._id}}">
                                    <img src="{{this.mainImage}}" alt="Product Image">
                                </a>
                                <div class="product-action">
                                    <a href="#"><i class="fa fa-cart-plus"></i></a>
                                    <a href="#"><i class="fa fa-heart"></i></a>
                                    <a href="/viewone/{{this._id}}"><i class="fa fa-search"></i></a>
                                </div>
                            </div>
                            <div class="product-content">
                                <div class="title"><a href="/viewone/{{this._id}}">{{this.name}}</a></div>
                                <div class="price">${{this.price}}</div>
                                {{#if (eq this.stock 0)}}
                                <div style="color: red; font-weight: bold;">OUT OF STOCK</div>
                                {{else}}
                                <div>Stock: {{this.stock}}</div>
                                {{/if}}
                            </div>
                        </div>

                    </div>
                    {{/each}}
                </div>

                <div class="col-lg-12">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            {{#ifCond current '>' 1}}
                            <li class="page-item">
                                <a class="page-link" href="?page={{subtract current 1}}" tabindex="-1">Previous</a>
                            </li>
                            {{else}}
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">Previous</a>
                            </li>
                            {{/ifCond}}

                            {{#ifCond current '<' pages}} <li class="page-item">
                                <a class="page-link" href="?page={{add current 1}}">Next</a>
                                </li>
                                {{else}}
                                <li class="page-item disabled">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                                {{/ifCond}}
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Product List End -->