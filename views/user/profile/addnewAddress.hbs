<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Address</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .address-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        form label {
            margin-bottom: 5px;
            font-weight: bold;
        }

        form input, form select {
            margin-bottom: 15px;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        form button {
            padding: 10px;
            font-size: 16px;
            background-color: #ff477e;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        form button:hover {
            background-color: #ff678e;
        }

        .invalid-feedback {
            color: red;
            display: none;
            margin-top: -10px;
            margin-bottom: 10px;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="address-container">
        <h2>Add New Address</h2>
        <form action="/add-new-address" method="post" novalidate>
            <label for="name">Name</label>
            <input type="text" id="name" name="name" required minlength="3" maxlength="100">
            <div class="invalid-feedback">
                Please enter a valid Name (3-100 characters).
            </div>

            <label for="mobile">Mobile</label>
            <input type="text" id="mobile" name="mobile" required pattern="^\d{10}$">
            <div class="invalid-feedback">
                Please enter a valid 10-digit Mobile Number.
            </div>

            <label for="address">Address</label>
            <input type="text" id="address" name="address" required maxlength="200">
            <div class="invalid-feedback">
                Address is required and should be less than 200 characters.
            </div>

            <label for="locality">Locality</label>
            <input type="text" id="locality" name="locality" required maxlength="200">
            <div class="invalid-feedback">
                Locality is required and should be less than 200 characters.
            </div>

            <label for="city">City</label>
            <input type="text" id="city" name="city" required maxlength="100">
            <div class="invalid-feedback">
                City is required and should be less than 100 characters.
            </div>

            <label for="state">State</label>
            <input type="text" id="state" name="state" required maxlength="100">
            <div class="invalid-feedback">
                State is required and should be less than 100 characters.
            </div>

            <label for="pincode">Pincode</label>
            <input type="text" id="pincode" name="pincode" required pattern="^\d{6}$">
            <div class="invalid-feedback">
                Please enter a valid 6-digit Pincode.
            </div>

            <label for="addressType">Address Type</label>
            <select id="addressType" name="addressType" required>
                <option value="home">Home</option>
                <option value="office">Office</option>
                <option value="other">Other</option>
            </select>
            <div class="invalid-feedback">
                Please select an Address Type.
            </div>

            <label for="default">Set as Default</label>
            <input type="checkbox" id="default" name="default">

            <button type="submit">Add Address</button>
        </form>
    </div>

    <script>
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByTagName('form');
                Array.prototype.forEach.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                            // Show custom error messages
                            form.querySelectorAll(':invalid').forEach(function (element) {
                                var invalidFeedback = element.nextElementSibling;
                                if (invalidFeedback && invalidFeedback.classList.contains('invalid-feedback')) {
                                    invalidFeedback.style.display = 'block';
                                }
                            });
                        } else {
                            // Hide custom error messages
                            form.querySelectorAll('.invalid-feedback').forEach(function (element) {
                                element.style.display = 'none';
                            });
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
</body>
</html>
