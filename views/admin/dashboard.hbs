<!-- JavaScript to Toggle Listings -->
<script>
    document.getElementById('toggleProductListing').addEventListener('click', function() {
        const productListing = document.getElementById('productListing');
        if (productListing.style.display === 'none') {
            productListing.style.display = 'block';
        } else {
            productListing.style.display = 'none';
        }
    });

    document.getElementById('toggleCategoryListing').addEventListener('click', function() {
        const categoryListing = document.getElementById('categoryListing');
        if (categoryListing.style.display === 'none') {
            categoryListing.style.display = 'block';
        } else {
            categoryListing.style.display = 'none';
        }
    });

  document.getElementById('applyFilter').addEventListener('click', function() {
        const filterType = document.getElementById('filterType').value;
        const filterDate = document.getElementById('filterDate').value;

        console.log(`Fetching data for filterType=${filterType}, filterDate=${filterDate}`);

        // Fetch data based on filters and update chart
        fetch(`/admin/order-analysis?filterType=${filterType}&filterDate=${filterDate}`)
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                console.log('Received data:', data);
                updateChart(data);
            })
            .catch(error => {
                console.error('Error fetching data:', error);
            });
    });

    const ctx = document.getElementById('orderAnalysisChart').getContext('2d');
    let orderAnalysisChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: [], // Will be updated dynamically
            datasets: [{
                label: 'Orders',
                data: [], // Will be updated dynamically
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    function updateChart(data) {
        orderAnalysisChart.data.labels = data.labels;
        orderAnalysisChart.data.datasets[0].data = data.orders;
        orderAnalysisChart.update();
    }

    $(document).ready(function() {
        $('#filterDate').datepicker({
            dateFormat: 'yy-mm-dd'
        });
    });
</script>

